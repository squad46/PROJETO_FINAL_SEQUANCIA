@{
    ViewData["Title"] = "Trabalhos / Empregos";
    var trabalhos = ViewData["trabalhos"] as List<Trabalho>;
}
<div id="scrollbar" class="container-fluid pt-0 bg-light">
    <div class="container text-black-50 p-3">
        <div class="px-3 pt-3 pb-2 mb-2 border shadow-sm bg-white">
            <div class="row">
                <div class="col">
                    <h3><strong>Trabalho / Emprego</strong></h3>
                </div>
                <div class="col text-right">
                    <form asp-controller="Trabalho" asp-action="Filtrar" method="post">
                        <select name="uf" class="">
                            <option selected>UF</option>
                            <option>AC</option>
                            <option>AL</option>
                            <option>AP</option>
                            <option>AM</option>
                            <option>BA</option>
                            <option>CE</option>
                            <option>DF</option>
                            <option>ES</option>
                            <option>GO</option>
                            <option>MA</option>
                            <option>MS</option>
                            <option>MT</option>
                            <option>MG</option>
                            <option>PA</option>
                            <option>PB</option>
                            <option>PR</option>
                            <option>PE</option>
                            <option>PI</option>
                            <option>RJ</option>
                            <option>RN</option>
                            <option>RS</option>
                            <option>RO</option>
                            <option>RR</option>
                            <option>SC</option>
                            <option>SP</option>
                            <option>SE</option>
                            <option>TO</option>
                        </select>                     
                        <input type="submit" value="Filtrar" />
                    </form>
                </div>
            </div>
        </div>
        @{  // Faz a lista oportunidade de trabalho se existir alguma.
            if (trabalhos.Count > 0)
            {
                foreach (var trabalho in trabalhos)
                {
                    <div class="pt-3 px-3 mb-2 bg-white border">
                        <h1 class="title-details pb-2 border-bottom"><strong><a asp-controller="Trabalho" asp-action="Detalhes" asp-route-id="@trabalho.Id" asp-route-pessoaId="@trabalho.Id_pessoa">@trabalho.Nome</a></strong></h1>
                        <dl class="row">
                            <dt class="col-3">Instituição</dt>
                            <dd class="col-9">@trabalho.Instituicao</dd>
                            <dt class="col-3">Descrição</dt>
                            <dd class="col-9">@trabalho.Atividade</dd>
                            <dt class="col-3">Tipo</dt>
                            <dd class="col-9">@trabalho.Tipo</dd>
                            <dt class="col-3">Salário</dt>
                            <dd class="col-9">R$@trabalho.Salario.ToString("#,###,###.00")</dd>
                            <dt class="col-3">Endereço</dt>
                            <dd class="col-9">@trabalho.Endereco, @trabalho.Numero. @trabalho.Bairro CEP @trabalho.CEP.ToString("#####-###") @trabalho.Cidade/@trabalho.UF</dd>
                            <dt class="col-3">Contato</dt>
                            <dd class="col-9">@trabalho.NomeContato - @trabalho.EmailContato Tel. @Convert.ToInt64(trabalho.TelefoneContato).ToString("(00) 00000-0000")</dd>
                            <dt class="col-3">Publicação</dt>
                            <dd class="col-9">@String.Format("{0:dd/MM/yyyy}",trabalho.DataCadastro)</dd>
                        </dl>
                    </div>
                }
            }
        }      
        <br />
        <br />
        <br />
    </div>
</div>
